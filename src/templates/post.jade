doctype xhtml
html(lang="en")
	head
		title= title || header
		link(rel="stylesheet", href="../resources/index.css", type="text/css")
	body
		div#links-bar.smaller
			a.site-link(href="../index.html") home
			= " | "
			a.site-link(href="http://www.gymbyl.com") my 'real' website
			= " | "
			a.site-link(href="http://www.github.com/GymbylCoding") me on GitHub
		h2#page-header= header || title
		h5.post-date= date
		div#main-content
			each elem in content
				if elem[0] === "p"
					p!= elem[1]
				else if elem[0] === "h"
					h2!= elem[1]
				else if elem[0] === "hs"
					h4!= elem[1]
				else if elem[0] === "code"
					pre: code!= elem[1]
				else if elem[0] === "image"
					a.center-aligned(width="100%", style="display:block", href="../resources/graphics/" + elem[1]): img(src="../resources/graphics/" + elem[1], style="max-width:100%")
				else
					#{elem[0]}!= elem[1]